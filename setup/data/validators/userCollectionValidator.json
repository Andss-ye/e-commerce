{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["firstName", "lastName", "gender"],
    "properties": {
      "_id": { "bsonType": "objectId" },
      "firstName": {
        "bsonType": "string",
        "description": "Ingrese su nombre completo"
      },
      "lastName": {
        "bsonType": "string",
        "description": "Ingrese sus apellidos completo"
      },
      "gender": {
        "bsonType": "string",
        "enum": ["M", "F"],
        "description": "Seleccione algunas de las opciones válidas 'M y F'"
      },
      "hobbies": {
        "bsonType": "array",
        "description": "Selecione sus pasatiempos",
        "items": {
          "bsonType": "string",
          "enum": [
            "Hornear",
            "Jardinería",
            "Instrumentos musicales",
            "Puzzles de lógica",
            "Poker y Blackjack",
            "Orientación",
            "Carpintería"
          ],
          "description": "Seleccione algunas de las opciones válidas"
        }
      },
      "age": {
        "bsonType": "int",
        "minimum": 18,
        "description": "La edad debe ser mayor de edad y ser un numero"
      }
    },
    "additionalProperties": false
  }
}